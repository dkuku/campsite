<% include ../partials/header %>

<div class="container">
  <h1 style="text-align:center">Add new comment to <%= campsite.name %></h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form class="form-group" action="/campsites/<%=campsite._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" name="comment[text]" type="text" placeholder="comment"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="comment[author]" type="text" placeholder="author"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campsites/">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
