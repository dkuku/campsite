<% include ../partials/header %>

<div class="container">
  <h1 style="text-align:center">Edit <%= campsite.name %></h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form class="form-group" action="/campsites/<%= campsite._id %>?_method=PUT %>" method="POST">
        <div class="form-group">
          <input class="form-control" name="campsite[name]" type="text" value="<%= campsite.name %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campsite[description]" type="text" value="<%= campsite.description %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campsite[price]" type="number" value="<%= campsite.price %>" min="0.01" step="0.01"/>
        </div>
        <div class="form-group">
          <input class="form-control" name="campsite[image]" type="text" value="<%= campsite.image %>"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campsites/">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
